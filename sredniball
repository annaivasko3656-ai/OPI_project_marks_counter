#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Сколько оценок вы хотите ввести? ";
    cin >> n;
    
    int* grades = new int[n];
    
    cout << "Введите " << n << " оценок (от 1 до 10):" << endl;
    for (int i = 0; i < n; i++) {
        do {
            cout << "Оценка " << i + 1 << ": ";
            cin >> grades[i];
            if (grades[i] < 1 || grades[i] > 10) {
                cout << "Ошибка! Оценка должна быть от 1 до 10." << endl;
            }
        } while (grades[i] < 1 || grades[i] > 10);
    }
    
    double sum = 0;
    for (int i = 0; i < n; i++) {
        sum += grades[i];
    }
    double average = sum / n;
    
    cout << "\nСредний балл: " << average << endl;
    
    delete[] grades;
    return 0;
}
